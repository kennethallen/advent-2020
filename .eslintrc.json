{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "comma-dangle": ["error", "only-multiline"],
      "padded-blocks": "warn",
      "no-multiple-empty-lines": "warn",
      "space-before-function-paren": "off"
    }
}
